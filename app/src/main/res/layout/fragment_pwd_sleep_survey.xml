<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DailySurvey">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_alignParentTop="false"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <CheckBox
            android:text="Multiple Bathroom Visits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkMultipleBathroomVisits"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad Dreams"
            android:id="@+id/checkBadDreams"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Naps"
            android:id="@+id/checkMoreNaps"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty Falling Asleep"
            android:id="@+id/checkDifficultyFallingAsleep"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waking Up Frequently"
            android:id="@+id/checkWakeUpFrequently"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restless or Overactive"
            android:id="@+id/checkRestlessOveractive"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waking Early"
            android:id="@+id/checkWakeUpEarly"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

    </GridLayout>
</RelativeLayout>
