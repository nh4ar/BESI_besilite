<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.uva.inertia.besilite.DailySurvey$PlaceholderFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <CheckBox
            android:text="Isolated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox16"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satisfied"
            android:id="@+id/checkBox17"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhausted"
            android:id="@+id/checkBox18"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busy"
            android:id="@+id/checkBox19"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hopeful"
            android:id="@+id/checkBox20"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worried"
            android:id="@+id/checkBox21"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hanging In There"
            android:id="@+id/checkBox22"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivated"
            android:id="@+id/checkBox23"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frustrated"
            android:id="@+id/checkBox24"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:id="@+id/checkBox25"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confident"
            android:id="@+id/checkBox26"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discouraged"
            android:id="@+id/checkBox27"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rested"
            android:id="@+id/checkBox28"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calm"
            android:id="@+id/checkBox29"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Control"
            android:id="@+id/checkBox30"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />
    </GridLayout>

</RelativeLayout>
