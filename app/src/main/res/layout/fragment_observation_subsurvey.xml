<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uva.inertia.besilite.ObservationSubsurveyFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_row="5"
            android:layout_column="3">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkKicking"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:checked="false"
                android:text="Kicking" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spitting"
                android:id="@+id/checkSpitting"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hitting (Including Self)"
                android:id="@+id/checkHitting"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screaming / Yelling"
                android:id="@+id/checkScreamingYelling"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eating Non Food "
                android:id="@+id/checkEatingNonFood"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pacing"
                android:id="@+id/checkPacing"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strange Noises"
                android:id="@+id/checkStrangeNoises"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breaking Things"
                android:id="@+id/checkBreakingThings"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wandering"
                android:id="@+id/checkWandering"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repetitive"
                android:id="@+id/checkRepetitive"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unable To Find Common Places"
                android:id="@+id/checkUnableToFindCommonPlaces"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disrobing"
                android:id="@+id/checkDisrobing"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scratching"
                android:id="@+id/checkScratching"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biting"
                android:id="@+id/checkBiting"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:checked="false" />

        </GridLayout>
    </RelativeLayout>
</FrameLayout>
