<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uva.inertia.besilite.AgiGenInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/agi_gen">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agitation Date"
            android:id="@+id/agi_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agitation Time"
            android:id="@+id/agi_time"
            android:layout_alignRight="@+id/agi_date"
            android:layout_alignEnd="@+id/agi_date"
            android:layout_below="@+id/agi_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agitation Level:   "
            android:id="@+id/textView"
            android:layout_marginTop="27dp"
            android:textSize="18dp"
            android:layout_below="@+id/agi_time"
            android:layout_alignLeft="@+id/agi_level_slider"
            android:layout_alignStart="@+id/agi_level_slider" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agi_level_slider"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/agi_time"
            android:layout_alignStart="@+id/agi_time" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/agi_level_viewer"
            android:layout_above="@+id/agi_level_slider"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:textSize="18dp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/agi_date_viewer"
            android:layout_alignBottom="@+id/agi_date"
            android:layout_toRightOf="@+id/agi_date"
            android:layout_toEndOf="@+id/agi_date"
            android:textSize="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/agi_time_viewer"
            android:layout_alignBottom="@+id/agi_time"
            android:layout_toRightOf="@+id/agi_time"
            android:layout_toEndOf="@+id/agi_time"
            android:textSize="20dp" />

    </RelativeLayout>

</FrameLayout>
