<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/AgitationLayoutNotif"
    android:clickable="false"
    android:background="#E1BEE7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notifications"
                android:id="@+id/textView_notifications"
                android:textStyle="bold"
                android:textSize="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_notif_question1"
                    android:layout_below="@+id/textView_notifications"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/textView_notif_question1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Was there a notification for this event?" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_notif_question2"
                    android:layout_alignTop="@+id/linearLayout_notif_question3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/textView_notif_question2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Was the notification accurate?" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_notif_question3"
                    android:layout_alignTop="@+id/linearLayout_notif_question2"
                    android:layout_toRightOf="@+id/linearLayout11_notif"
                    android:layout_toEndOf="@+id/linearLayout11_notif">

                    <TextView
                        android:id="@+id/textView_notif_question3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Was the notification helpful?" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_marginTop="23dp"
            >

            <Button
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/backFromNotifs"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_gravity="left|top"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/buttonanimate"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="36dp"
                android:textStyle="bold" />


            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/submitOnNotifs"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_gravity="right|top"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/loginbtnanimate"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="36dp"
                android:textStyle="bold" />
        </GridLayout>

        <!--android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"-->
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:id="@+id/imageView3_notif"-->
        <!--android:layout_gravity="right"-->
        <!--android:src="@drawable/pwd"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentRight="true" />-->

</RelativeLayout>
