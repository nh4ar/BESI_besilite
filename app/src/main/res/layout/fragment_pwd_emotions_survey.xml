<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#E1BEE7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please select all that apply."
            android:id="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short-tempered"
                android:id="@+id/checkShortTempered"
                android:checked="false"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="0"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less talkative"
                android:id="@+id/checkLessTalk"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trouble paying attention"
                android:id="@+id/checkTroubleConcen"
                android:checked="false"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="0"
                android:layout_column="2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tearfulness"
                android:id="@+id/checkTearfulness"
                android:checked="false"
                android:layout_below="@+id/checkTearfulness"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="1"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appetite Loss"
                android:id="@+id/checkAppetiteLoss"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="1"
                android:layout_column="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lack of energy"
                android:id="@+id/checkLackEnergy"
                android:checked="false"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:layout_row="1"
                android:layout_column="2" />

            <CheckBox
                android:layout_width="323dp"
                android:layout_height="83dp"
                android:text="Lack of reaction to pleasant events"
                android:id="@+id/checkLackOfReact"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="2"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="471dp"
                android:layout_height="wrap_content"
                android:text="Loss of interest in usual activities"
                android:id="@+id/checkLessIntrest"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="2"
                android:layout_column="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low self-esteem"
                android:button="@drawable/customcheckbox"
                android:id="@+id/checkLowEsteem"
                android:checked="false"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginTop="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anxiety/Worrying"
                android:id="@+id/checkVeryWorried"
                android:checked="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="3"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sad expression/voice"
                android:id="@+id/checkSadExpression"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="3"
                android:layout_column="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow speech"
                android:id="@+id/checkSlowSpeech"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:button="@drawable/customcheckbox"
                android:layout_column="2"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frightened"
                android:id="@+id/checkFrightened"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="4"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physical complaints"
                android:id="@+id/checkPhysicalComplaints"
                android:checked="false"
                android:layout_column="1"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="4" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow reaction/movement"
                android:id="@+id/checkSlowMove"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="4"
                android:layout_column="2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suicidal"
                android:id="@+id/checkSuicidal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:button="@drawable/customcheckbox"
                android:layout_column="0"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_row="5" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anticipation of the worst"
                android:id="@+id/checkWorstAnticipate"
                android:checked="false"
                android:textSize="30dp"
                android:button="@drawable/customcheckbox"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_row="5"
                android:layout_column="2" />

        </GridLayout>

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text="Next"
            android:id="@+id/pwd_mood_next"
            android:textSize="36dp"
            android:textAllCaps="false"
            android:background="@drawable/loginbtnanimate"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/linearLayout10"
            android:layout_alignEnd="@+id/linearLayout10"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_marginBottom="60dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView5"
        android:layout_gravity="top|right"
        android:src="@drawable/pwd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp" />

</RelativeLayout>