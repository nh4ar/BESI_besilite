<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DailySurvey">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:text="Sad Voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trouble Concentrating"
            android:id="@+id/checkBox11"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tearfulness"
            android:id="@+id/checkBox2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appetite Loss"
            android:id="@+id/checkBox7"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bothered by Usual Activies"
            android:id="@+id/checkBox12"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lack of Reaction"
            android:id="@+id/checkBox3"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less Interested in Hobbies"
            android:id="@+id/checkBox8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow Movement"
            android:id="@+id/checkBox13"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Worried"
            android:id="@+id/checkBox4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad Expression"
            android:id="@+id/checkBox9"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow Speech"
            android:id="@+id/checkBox14"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frightened"
            android:id="@+id/checkBox5"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less Talkative"
            android:id="@+id/checkBox6"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lack of Interest"
            android:id="@+id/checkBox10"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow Reaction"
            android:id="@+id/checkBox15"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:checked="false" />
    </GridLayout>
</RelativeLayout>
