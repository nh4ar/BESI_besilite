<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:actionBarStyle">@style/AppTheme.Theme.Styled.ActionBar</item>
    </style>

    <style name="AppTheme.Theme.Styled.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.Theme.Styled.ActionBar.TitleTextStyle
        </item>
    </style>

    <style name="AppTheme.Theme.Styled.ActionBar.TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SubIconView">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#FAFAFA</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.Theme.Styled"></style>

    <style name="AppTheme.Theme"></style>


</resources>
